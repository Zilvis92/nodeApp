<%- include('./partials/head.ejs') %>
<%- include('./partials/nav.ejs') %>

<div class="blog-detail-content">
    <article class="blog-article">
        <header class="blog-header">
            <nav class="breadcrumb">
                <a href="/">Pamokos</a>
                <span><%= blog.title %></span>
            </nav>
            <h1><%= blog.title %></h1>
             <p class="blog-meta">Sukurta: <time datetime="<%= blog.date %>"><%= blog.date %></time></p>
        </header>
        
        <div class="blog-summary">
            <h3>Santrauka</h3>
            <p><%= blog.santrauka %></p>
        </div>
        
        <div class="blog-body">
            <h3>Pamokos turinys</h3>
            <div class="blog-content">
                <%= blog.body %>
            </div>
        </div>
        
        <footer class="blog-footer">
            <div class="blog-actions">
                <a href="/" class="back-button">← Grįžti į pamokų sąrašą</a>
                <button class="delete-button" data-blog-id="<%= blog.id %>">Ištrinti pamoką</button>           
            </div>
        </footer>
    </article>
</div>

<script src="/js/blogActions.js"></script>

<%- include('./partials/footer.ejs') %>