<%- include('./partials/head.ejs') %>
<%- include('./partials/nav.ejs') %>

<div class="auth-content">
    <h2>Prisijungimas</h2>
    
    <% if (typeof error !== 'undefined') { %>
        <div class="error-message">
            <%= error %>
        </div>
    <% } %>
    
    <% if (typeof success !== 'undefined') { %>
        <div class="success-message">
            <%= success %>
        </div>
    <% } %>
    
    <form action="/loginPage" method="POST" class="auth-form">
        <div class="form-group">
            <label for="email">El. paštas</label>
            <input type="email" id="email" name="email" 
                   value="<%= typeof formData !== 'undefined' ? formData.email : '' %>" 
                   placeholder="Įveskite savo el. paštą" required>
        </div>
        
        <div class="form-group">
            <label for="password">Slaptažodis</label>
            <input type="password" id="password" name="password" 
                   placeholder="Įveskite savo slaptažodį" required>
        </div>
        
        <button type="submit" class="auth-button">Prisijungti</button>
        
        <div class="auth-link">
            <p>Neturite paskyros? <a href="/register">Registruokitės čia</a></p>
        </div>
    </form>
</div>

<%- include('./partials/footer.ejs') %>